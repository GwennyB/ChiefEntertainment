@model ChiefEntertainment.Models.ViewModels.ContactViewModel
@{
    ViewBag.title = "contact";
    Layout = "_Layout";
}

    <form method="post" asp-route="SubmitContact">
    <h3>Contact Us</h3>
        <fieldset>
            <label asp-for="Name"></label>
            <input asp-for="Name" placeholder="Enter your name" />
            <p asp-validation-for="Name"></p>
        </fieldset>

        <fieldset>
            <label asp-for="Email"></label>
            <input asp-for="Email"  placeholder="ie, name@domain.com"/>
            <p asp-validation-for="Email"></p>
        </fieldset>

        <fieldset>
            <label asp-for="Phone"></label>
            <input asp-for="Phone" placeholder="ie, 555-123-1234" />
            <p asp-validation-for="Phone"></p>
        </fieldset>

        <fieldset>
            <label asp-for="Message"></label>
            <textarea asp-for="Message" style="white-space: pre-wrap" rows="5"  placeholder="Enter your message here"></textarea>
            <p asp-validation-for="Message"></p>
        </fieldset>

        <button type="submit" value="Send Message">Send Message</button>
    </form>